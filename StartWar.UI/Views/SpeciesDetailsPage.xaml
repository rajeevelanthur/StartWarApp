<Page x:Class="StartWar.UI.Views.SpeciesDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StartWar.UI.Views"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SpeciesDetailsPage">
    <Page.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVisible" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Text="Species Details"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="32"
                   Margin="10,0,0,0"
                   Grid.Row="0" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="400"
                                  Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0"
                  Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="100" />
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Content="Name "
                       Margin="10,0,0,0"
                       FontSize="15"
                       Grid.Row="0"
                       Grid.Column="0"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left" />
                <Label Content=":"
                       Margin="0,0,0,0"
                       FontSize="10"
                       Grid.Row="0"
                       Grid.Column="1"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left" />
                <TextBlock Grid.Row="0"
                           FontWeight="SemiBold"
                           Grid.Column="2"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           FontSize="15"
                           Text="{Binding Species.Name, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                <Label Content="classification"
                       Margin="10,0,0,0"
                       FontSize="15"
                       Grid.Row="1"
                       Grid.Column="0"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left" />
                <Label Content=":"
                       Margin="0,0,0,0"
                       FontSize="10"
                       Grid.Row="1"
                       Grid.Column="1"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left" />
                <TextBlock Grid.Row="1"
                           FontWeight="SemiBold"
                           Grid.Column="2"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           FontSize="15"
                           Text="{Binding Species.Classification, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                <Label Content="Designation"
                       Margin="10,0,0,0"
                       FontSize="15"
                       Grid.Row="2"
                       Grid.Column="0"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left" />
                <Label Content=":"
                       Margin="0,0,0,0"
                       FontSize="10"
                       Grid.Row="2"
                       Grid.Column="1"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left" />
                <TextBlock Grid.Row="2"
                           FontWeight="SemiBold"
                           Grid.Column="2"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           FontSize="15"
                           Text="{Binding Species.Designation, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                <Label Content="Average Height"
                       Margin="10,0,0,0"
                       FontSize="15"
                       Grid.Row="3"
                       Grid.Column="0"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left" />
                <Label Content=":"
                       Margin="0,0,0,0"
                       FontSize="10"
                       Grid.Row="3"
                       Grid.Column="1"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left" />
                <TextBlock Grid.Row="3"
                           FontWeight="SemiBold"
                           Grid.Column="2"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           FontSize="15"
                           Text="{Binding Species.Average_Height, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                <Label Content="skin_colors"
                       Margin="10,0,0,0"
                       FontSize="15"
                       Grid.Row="4"
                       Grid.Column="0"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left" />
                <Label Content=":"
                       Margin="0,0,0,0"
                       FontSize="10"
                       Grid.Row="4"
                       Grid.Column="1"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left" />
                <TextBlock Grid.Row="4"
                           FontWeight="SemiBold"
                           Grid.Column="2"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           FontSize="15"
                           Text="{Binding Species.Skin_Colors, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                <Label Content="Average_Lifespan"
                       Margin="10,0,0,0"
                       FontSize="15"
                       Grid.Row="5"
                       Grid.Column="0"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left" />
                <Label Content=":"
                       Margin="0,0,0,0"
                       FontSize="10"
                       Grid.Row="5"
                       Grid.Column="1"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left" />
                <TextBlock Grid.Row="5"
                           FontWeight="SemiBold"
                           Grid.Column="2"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           FontSize="15"
                           Text="{Binding Species.Average_Lifespan, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />

                <Button Grid.Column="0"
                        Grid.Row="6"
                        Height="30"
                        Width="Auto"
                        Command="{Binding ShowPeopleCommand}"
                        HorizontalContentAlignment="Center"
                        Grid.ColumnSpan="3"
                        Margin="10,0,0,0"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Content="Peoples" />

            </Grid>

        </Grid>
    </Grid>
</Page>

